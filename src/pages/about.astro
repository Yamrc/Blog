---
import { getEntry, render } from "astro:content";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

const aboutEntry = await getEntry("spec", "about");

if (!aboutEntry) {
	throw new Error(
		"About page content not found. Please add src/content/spec/about.md",
	);
}

const { Content } = await render(aboutEntry);
const title = i18n(I18nKey.about);
const description = aboutEntry.data?.description ?? title;
---

<MainGridLayout title={title} description={description}>
	<section class="rounded-[var(--radius-large)] bg-[var(--card-bg)] border border-black/5 dark:border-white/5 p-6 md:p-8 onload-animation">
		<Markdown class="markdown-content space-y-4">
			<Content />
		</Markdown>
	</section>
</MainGridLayout>

