---
import { Icon } from "astro-icon/components";
import { siteConfig } from "../config";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { url } from "../utils/url-utils";

const title = i18n(I18nKey.notFoundTitle);
const description = i18n(I18nKey.notFoundDescription);
---

<MainGridLayout title={title} description={description}>
	<div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative">
		<div class="card-base z-10 px-6 md:px-9 py-12 md:py-16 relative w-full text-center">
			<div class="mb-6">
				<h1 class="text-8xl md:text-9xl font-bold text-black/10 dark:text-white/10 mb-4">
					{i18n(I18nKey.notFound)}
				</h1>
				<h2 class="text-3xl md:text-4xl font-bold text-black/90 dark:text-white/90 mb-4">
					{title}
				</h2>
				<p class="text-lg text-black/60 dark:text-white/60 mb-8 max-w-md mx-auto">
					{description}
				</p>
			</div>
			<a
				href={url("/")}
				class="btn-regular inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition active:scale-95"
			>
				<Icon name="fa6-solid:house" class="text-lg" />
				{i18n(I18nKey.backToHome)}
			</a>
		</div>
	</div>
</MainGridLayout>

